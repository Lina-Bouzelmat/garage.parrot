{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .content {
            font-family: 'Barlow', sans-serif;
            color: #262526;
            background-color: #F2F2F2;
        }
        .navi{
            background-color: #2B2B2B;
            font-family: 'Barlow', sans-serif;
            color: #938989;
        }

        .boutton {
            font-family: 'Bahnschrift', serif;
            background-color: #CA3232;
            border-style: inset;
            border-color: #D9777F;
            padding: 4px;
        }

        .footer {
            font-family: 'Barlow', sans-serif;
            color: #C3C3C3;
            background-color: #343A40;
            text-align: left;
        }

    </style>
{% endblock %}
{% block title %}Éditer les horaires{% endblock %}

{% block content %}
    <h1>Éditer les horaires</h1>

    {{ form_start(horaireform) }}
    {{ form_row(horaireform.jour, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(horaireform.matin, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(horaireform.soir, {'attr': {'class': 'form-control'}}) }}

    <button type="submit" class="boutton">Enregistrer</button>
    {{ form_end(horaireform) }}

    <a href="{{ path('admin_dashboard') }}"  class="boutton">Retour au tableau de bord</a>
{% endblock %}