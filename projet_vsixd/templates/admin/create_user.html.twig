{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .content {
            font-family: 'Barlow', sans-serif;
            color: #262526;
            background-color: #F2F2F2;
        }
        .navi{
            background-color: #2B2B2B;
            font-family: 'Barlow', sans-serif;
            color: #938989;
        }

        .boutton {
            font-family: 'Bahnschrift', serif;
            background-color: #CA3232;
            border-style: inset;
            border-color: #D9777F;
            padding: 4px;
        }

        .footer {
            font-family: 'Barlow', sans-serif;
            color: #C3C3C3;
            background-color: #343A40;
            text-align: left;
        }

        .logo {
            max-width: 100%;
            height: auto;
        }
    </style>
{% endblock %}
{% block title %}Créer un nouvel administrateur{% endblock %}

{% block content %}
    <h1>Créer un nouvel administrateur</h1>

    {{ form_start(adminform) }}
    {{ form_row(adminform.email, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(adminform.password, {'attr': {'class': 'form-control'}}) }}

    <button type="submit" class='boutton'>Créer</button>
    {{ form_end(adminform) }}

    <a href="{{ path('admin_dashboard') }}">Retour au tableau de bord</a>
{% endblock %}